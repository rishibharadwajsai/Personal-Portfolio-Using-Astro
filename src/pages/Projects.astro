---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";
---

<Layout title="Projects - Rishi Bharadwaj Sai">
  <div
    class="max-w-screen-xl flex flex-wrap mx-auto mt-10 rounded justify-center lg:justify-start slide-up"
  >
    <ProjectCard
      title="Food Booking Web App"
      description="This project is a food booking web application that allows users to pre-book meals for a specific day within a month, offering greater flexibility compared to standard options available for tomorrow or within a week."
      link="https://foodbookingapp.pages.dev"
      github="https://github.com/rishibharadwajsai/Food-management-system"
      image="/images/food-booking.png"
    />
    <ProjectCard
      title="Greencon 2025"
      description="The GREENCON'25, hosted at VIT Chennai, aims to facilitate discussions on sustainable advancements in ECE. This event will foster collaboration among leading researchers and aspiring engineers and innovations in the field."
      link="https://greencon.vercel.app"
      github="https://github.com/rishibharadwajsai/greencon"
      image="/images/greencon.png"
    />
    <ProjectCard
      title="BITWARS 2024"
      description="The Bitwars project is a static web page designed for a competitive coding event, sponsored by Unstop."
      link="https://bitwars.ieeecsvitc.com/"
      github="https://github.com/ComputerSocietyVITC/bitwars-24"
      image="/images/Bitwars-image.png"
    />
    <ProjectCard
      title="Flappy Bird - OpenCV"
      description="Face-Controlled Flappy Bird is an interactive game where you control a bird's vertical movement using facial gestures detected by a webcam."
      link="https://github.com/rishibharadwajsai/FlappyBird-OpenCV"
      github="https://github.com/rishibharadwajsai/FlappyBird-OpenCV"
      image="/images/flappy-bird-in-3d.png"
    />
    <ProjectCard
      title="Health Care Center"
      description="This project explores the prediction of cardiac disease probability using a dataset of health metrics."
      link="https://healthcarecenterapp.onrender.com/"
      github="https://github.com/rishibharadwajsai/Health-care-center"
      image="/images/Health-care-image.png"
    />
    <ProjectCard
      title="Social Media App"
      description="React Social Media App is a lightweight web application built using React.js, designed to facilitate posting and viewing of user-generated content."
      link="https://reactsocialmediaapp.vercel.app/"
      github="https://github.com/rishibharadwajsai/social-media-app"
      image="/images/Social-media-image.png"
    />
    <ProjectCard
      title="OCR - Handwritten text Recognition"
      description="This repository features a ReactJS-based whiteboard for handwritten text input, integrated with a TensorFlow 2.x HTR system trained on multiple datasets."
      link="https://github.com/rishibharadwajsai/OCR-Handwritten-text-recognition"
      github="https://github.com/rishibharadwajsai/OCR-Handwritten-text-recognition"
      image="https://research.aimultiple.com/wp-content/uploads/2020/04/handwritingrecognition1.png"
    />
  </div>
</Layout>

<style>
  .slide-up {
    transform: translateY(-50%);
    opacity: 0;
    animation: slideUp 1s forwards;
  }

  @keyframes slideUp {
    from {
      transform: translateY(-50%);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
</style>
